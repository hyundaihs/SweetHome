<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/rect_ffffff_white_corner_10"
       android:padding="20dp"
       android:orientation="vertical">

       <EditText
           android:id="@+id/memberName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入姓名"
           android:textColor="@color/color_393939"
           android:textSize="15sp"
           android:inputType="text"
           android:theme="@style/MyEditText"/>

       <EditText
           android:id="@+id/memberIdCard"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入身份证号"
           android:textColor="@color/color_393939"
           android:textSize="15sp"
           android:inputType="text"
           android:theme="@style/MyEditText"/>

       <EditText
           android:id="@+id/memberGroupName"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入党支部名称"
           android:textColor="@color/color_393939"
           android:textSize="15sp"
           android:inputType="text"
           android:theme="@style/MyEditText"/>

       <EditText
           android:id="@+id/memberTime"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请选择入党年月"
           android:textColor="@color/color_393939"
           android:textSize="15sp"
           android:focusable="false"
           android:inputType="text"
           android:theme="@style/MyEditText"/>

       <EditText
           android:id="@+id/memberGroupAddr"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="请输入党支部地址"
           android:textColor="@color/color_393939"
           android:textSize="15sp"
           android:inputType="text"
           android:theme="@style/MyEditText"/>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/rect_ff4753_corner_5"
        android:text="提交申请"/>
</LinearLayout>