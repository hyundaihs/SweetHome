<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_ffffff_white_corner_10"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请对处理结果进行评价"
                android:textColor="@color/color_121212"
                android:textSize="15sp" />

        <TextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="点击图标开始评价"
                android:textColor="@color/color_A0A0A0"
                android:textSize="13sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/gray_star" />

            <ImageView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/gray_star" />

            <ImageView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/gray_star" />

            <ImageView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/gray_star" />

            <ImageView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@null"
                    android:src="@mipmap/gray_star" />

        </LinearLayout>
    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rect_ffffff_white_corner_10"
            android:gravity="top"
            android:hint="请在此输入评价内容…"
            android:inputType="text"
            android:maxLength="200"
            android:padding="10dp"
            android:textColor="@color/color_121212"
            android:textSize="13sp" />

    <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_red_bg_corner_5"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
</LinearLayout>